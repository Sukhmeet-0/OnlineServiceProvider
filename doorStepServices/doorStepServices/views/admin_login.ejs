<html>
    <head>
        <title>Admin Login</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> 
<style>
    
.vertical-center {
 margin: 0;
 width: 50vw;
  position: absolute;
  top: 50%;
  left: 50%;
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}
.back
{
background: rgba( 255, 255, 255, 0.05 );
box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
backdrop-filter: blur( 1px );
-webkit-backdrop-filter: blur( 1px );
border-radius: 10px;
border: 1px solid rgba( 255, 255, 255, 0.18 );
}
</style>
  <script>
           function go()
           {
               var email  = document.getElementById("email").value.trim();
               var password = document.getElementById("password").value.trim();
 
                      
               // Send AJAX Request and get Response From Server
                var xhttp = new XMLHttpRequest();
                
                var form = new FormData();
                form.append("email",email);
                form.append("password",password);
                xhttp.onreadystatechange = function () 
                {
                    if (this.readyState == 4 && this.status == 200) 
                    {
            
                        var res = this.responseText.trim();
                        if(res==="success")
                        {
                             window.location.href= "Admin_home";
                        }
                    }
                };
                
                xhttp.open("POST", "/adminlogin", true);
                xhttp.send(form);
                
           }
        </script>
    </head>
    <body>
        <!--Container Start-->
        <div class="container-fluid"> 
            <!--row start-->
            <div class="row">
                <div class="col-sm-5" style="background: #ADD8E6; height: 100vh; display: flex; justify-content: center; align-items: center">
                    
                    <center><img src="../photos/back.png" style="width: 600px; vertical-align: central"></center>
                </div>
                <div class="col-7 container" style="position: relative; background: #202A44">
                    <div class="vertical-center">
                        <div class="container back">
                            <h1 style="color: white; text-align: center">Admin Login</h1>
                  
<form>
              <div class="mb-4">
                  <label for="username" class="form-label" style="color: white">Email</label>
                <input type="text" class="form-control" id="email" />
              </div>
              <div class="mb-4">
                <label for="password" class="form-label" style="color: white">Password</label>
                <input type="password" class="form-control" id="password" />
              </div>
           
    <div style="align-items: center; justify-content: center">
        <button type="button" class="btn btn-light" onclick="go()">Login</button>
              </div>
            </form>
                        </div>
                    <div>
                </div>
              <!--row ends-->  
            </div>
          <!--container ends-->
        </div>
            </div>
        </div>
    </body>
</html>
